{
  "name": "OFReport.com",
  "version": "2.0.0",
  "description": "Our family blog, documenting our work in Ukraine.",
  "author": "Joshua Steele",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --fix --ignore-path .gitignore .",
    "lint-css": "stylelint '**/*.(css|vue)' --fix",
    "lint-staged": "$(yarn bin)/lint-staged",
    "start": "nuxt start"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "cross-env": "^5.2.0",
    "nuxt": "^2.0.0",
    "storyblok-nuxt": "^0.0.9"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.5.0",
    "glob-all": "^3.1.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "purgecss-webpack-plugin": "^1.3.1",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "tailwindcss": "^0.7.2"
  }
}
