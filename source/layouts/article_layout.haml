= wrap_layout :layout do

  - content_for :og_tags do

    - og_default_image = image_path(data.site.current_family_photo)
    - og_image_path = article_og_image_for(current_article.data, og_default_image)
    - og_root = "http:" + data.site.content_server_url

    = tag "meta", property: "og:url", content: data.site.url + current_page.url
    = tag "meta", property: "og:type", content: "article"
    = tag "meta", property: "og:title", content: current_article.data.title
    = tag "meta", property: "article:author",
      content: fb_link_for(current_article.data.author)
    = tag "meta", property: "og:description",
      content: article_og_desc_for(current_article.data, data.site.description)
    = tag "meta", property: "og:image", content: og_root + og_image_path

  %section.container.navbar-top-spacing
    .column.container--title-area
      .article-title
        %h1= current_article.title

      .article-meta
        - if current_article.data.author?
          .meta-author
            = twitter_link_for(current_article.data.author)

        %time.meta-date{datetime: "#{current_article.date}"}= current_article.date.strftime("%b %d, %Y")

        %ul.meta-tag-list
          - current_article.tags.each do |tag|
            %li.meta-tag-item= link_to "#{tag}", tag_path(tag)


  %section.wide-container
    - if current_article.data.image
      .article-hero.hero-image.column
        = image_tag data.site.content_server_url + current_article.data.image
        - if current_article.data.caption
          .hero-image__caption
            %p.caption-text #{current_article.data.caption}


  %section.container.container--spacing
    - if current_article.tags.include?("newsletter")
      .column.pdf-download
        %i.fa.fa-file-pdf-o
        = link_to "Download PDF", data.site.content_server_url + "/ofr/" + current_article.data.download

    .article-body.column
      = yield

      - if current_article.tags.include?("newsletter")
        .to-God-be-the-glory
          = inline_svg "to-God-be-the-glory.svg"
