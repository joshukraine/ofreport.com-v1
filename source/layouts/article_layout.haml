= wrap_layout :layout do
  %section.container
    .article-header.column
      .article-title
        %h1= current_article.title
      .article-meta
        %p.meta-text
          #{current_article.date.strftime("%b %d, %Y")}
          &mdash;
          #{current_article.data.author}
      %ul.article-links
        %li= link_to "Download", "#"
        %li= link_to "Subscribe", "#"

  %section.wide-container
    .article-hero.column
      %img{src:"http://placehold.it/900x350"}

  %section.container--spacing
    .container
      .article-body.column
        = yield
