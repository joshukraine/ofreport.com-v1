= tag "meta", charset: "utf-8"
= tag "meta", content: "IE=edge", "http-equiv" => "X-UA-Compatible"
= tag "meta", content: "width=device-width, initial-scale=1.0", name: "viewport"
= tag "meta", name: "robots", content: smart_robots(current_page.path, config[:environment].to_s)
= tag "meta", name: "author", content: "Joshua Steele"
= tag "meta", name: "description", content: data.site.description

- if production?
  -# = tag "meta", name: "google-site-verification",
  -#   content: "[site-verification-code-here]"

- if content_for?(:og_tags)
  = yield_content :og_tags
- else
  - og_image = image_path(data.site.current_family_photo)
  - og_root = "http:" + data.site.asset_server_url

  = tag "meta", property: "og:url", content: data.site.url
  = tag "meta", property: "og:type", content: "blog"
  = tag "meta", property: "og:title", content: data.site.title
  = tag "meta", property: "og:description", content: data.site.description
  = tag "meta", property: "og:image", content: og_root + og_image

= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

%title= full_title(current_page.data.title, data.site.title)
= favicon_tag "favicon.ico"

-# = tag "link", rel: "apple-touch-icon", href: "images/apple-touch-icon.png"

= stylesheet_link_tag :site
= javascript_include_tag :bundle, async: !development?
= partial "partials/analytics" if production?
